<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.index"
             Title="index"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#F2F2F2">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Index"
                   FontSize="40"
                   HorizontalOptions="Center"
                   TextColor="#000000" />

            <Frame Padding="20"
                   CornerRadius="15"
                   BackgroundColor="#FFFFFF"
                   HasShadow="True">

                <VerticalStackLayout Spacing="20">

                    <Frame BackgroundColor="#EFEFEF" CornerRadius="10" Padding="15">

                        <VerticalStackLayout Spacing="10">

                            <Label Text="Nome do Evento:" TextColor="#000000"/>
                            <Entry x:Name="ENEvento" TextColor="#000000"/>

                            <Label Text="Número de Participantes:" TextColor="#000000"/>
                            <Entry x:Name="ENP" Keyboard="Numeric" TextColor="#000000"/>

                            <Label Text="Local do Evento:" TextColor="#000000"/>
                            <Entry x:Name="ELE" TextColor="#000000"/>

                            <Label Text="Custo por Pessoa:" TextColor="#000000"/>
                            <Entry x:Name="ECP" Keyboard="Numeric" TextColor="#000000"/>

                        </VerticalStackLayout>

                    </Frame>

                    <Frame BackgroundColor="#EFEFEF" CornerRadius="10" Padding="15">

                        <VerticalStackLayout Spacing="15">

                            <HorizontalStackLayout>
                                <Label Text="Check-in:" TextColor="#000000"/>
                                <DatePicker x:Name="DataCheckin"
                                            Format="dd/MM/yyyy"
                                            DateSelected="DataCheckin_DateSelected"
                                            TextColor="#000000"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout>
                                <Label Text="Check-out:" TextColor="#000000"/>
                                <DatePicker x:Name="DataCheckout"
                                            Format="dd/MM/yyyy"
                                            DateSelected="DataCheckout_DateSelected"
                                            TextColor="#000000"/>
                            </HorizontalStackLayout>

                        </VerticalStackLayout>

                    </Frame>

                    <Button Text="Avançar"
                            Clicked="Button_Clicked"
                            BackgroundColor="#4A90E2"
                            TextColor="#FFFFFF"
                            CornerRadius="10"
                            HeightRequest="50"/>

                </VerticalStackLayout>

            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
